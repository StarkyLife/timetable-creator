{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@tests/*": ["tests/*"]
        },
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "incremental": true,
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "removeComments": false,
        "resolveJsonModule": true,

        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,

        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}
